<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ForgotPasswordActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="359dp"
            android:layout_height="101dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="27dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/edd" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textview_Login"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:gravity="center"
        android:text="Forgot Password"
        android:textSize="34sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_lgborder"
            android:layout_width="280dp"
            android:layout_height="388dp"
            android:layout_marginStart="44dp"
            android:layout_marginEnd="42.5dp"
            android:background="@drawable/border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />


        <TextView
            android:id="@+id/fpEmailTitle"
            android:layout_width="236dp"
            android:layout_height="28dp"
            android:text=" Enter Email :"
            app:layout_constraintBottom_toBottomOf="@+id/textView_lgborder"
            app:layout_constraintEnd_toEndOf="@+id/textView_lgborder"
            app:layout_constraintHorizontal_bias="0.227"
            app:layout_constraintStart_toStartOf="@+id/textView_lgborder"
            app:layout_constraintTop_toTopOf="@+id/textView_lgborder"
            app:layout_constraintVertical_bias="0.222" />

        <EditText
            android:id="@+id/fpEmailTextInput"
            android:layout_width="262dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView_lgborder"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="@+id/textView_lgborder"
            app:layout_constraintTop_toTopOf="@+id/textView_lgborder"
            app:layout_constraintVertical_bias="0.376"
            tools:targetApi="o" />

        <Button
            android:id="@+id/resetPasswordButton"
            android:layout_width="263dp"
            android:layout_height="48dp"
            android:text="Reset Password"
            app:backgroundTint="#6cbfb0"
            app:layout_constraintBottom_toBottomOf="@+id/textView_lgborder"
            app:layout_constraintEnd_toEndOf="@+id/textView_lgborder"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toStartOf="@+id/textView_lgborder"
            app:layout_constraintTop_toTopOf="@+id/textView_lgborder"
            app:layout_constraintVertical_bias="0.647" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>