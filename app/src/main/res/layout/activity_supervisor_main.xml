<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SupervisorMain">

    <ImageView
        android:id="@+id/imgv_supervisor_main"
        android:layout_width="246dp"
        android:layout_height="145dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/edd" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imgv_supervisor_main">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_supervisor_main"
                android:layout_width="338dp"
                android:layout_height="480dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/border" />

            <Button
                android:id="@+id/btn_report_smain"
                android:layout_width="296dp"
                android:layout_height="56dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/textborder"
                android:text="Report Breakdown"
                app:backgroundTint="#6cbfb0" />

            <Button
                android:id="@+id/btn_viewreport_smain"
                android:layout_width="296dp"
                android:layout_height="56dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/btn_report_smain"
                android:background="@drawable/textborder"
                android:text="View Added Reports"
                app:backgroundTint="#6cbfb0" />

            <Button
                android:id="@+id/btn_message_smain"
                android:layout_width="296dp"
                android:layout_height="56dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btn_viewreport_smain"
                android:layout_marginTop="25dp"
                android:background="@drawable/textborder"
                android:text="Messages"
                app:backgroundTint="#6cbfb0" />

            <Button
                android:id="@+id/btn_profile_smain"
                android:layout_width="296dp"
                android:layout_height="56dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btn_message_smain"
                android:layout_marginTop="25dp"
                android:background="@drawable/textborder"
                android:text="View Profile"
                app:backgroundTint="#6cbfb0" />

            <Button
                android:id="@+id/btn_assigntask_smain"
                android:layout_width="296dp"
                android:layout_height="56dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btn_profile_smain"
                android:layout_marginTop="25dp"
                android:background="@drawable/textborder"
                android:text="To do List"
                app:backgroundTint="#6cbfb0" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>