<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginGmail">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="359dp"
            android:layout_height="101dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="27dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/edd" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textview_Login"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:gravity="center"
        android:text="Login"
        android:textSize="34sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_lgborder"
            android:layout_width="280dp"
            android:layout_height="388dp"
            android:layout_marginStart="44dp"
            android:layout_marginEnd="42.5dp"
            android:background="@drawable/border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />


        <TextView
            android:id="@+id/signInEmailTitle"
            android:layout_width="236dp"
            android:layout_height="28dp"
            android:text=" Email :"
            app:layout_constraintBottom_toBottomOf="@+id/textView_lgborder"
            app:layout_constraintEnd_toEndOf="@+id/textView_lgborder"
            app:layout_constraintHorizontal_bias="0.272"
            app:layout_constraintStart_toStartOf="@+id/textView_lgborder"
            app:layout_constraintTop_toTopOf="@+id/textView_lgborder"
            app:layout_constraintVertical_bias="0.044" />


        <EditText
            android:id="@+id/signInPasswordTextInput"
            android:layout_width="262dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textEmailAddress"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView_lgborder"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="@+id/textView_lgborder"
            app:layout_constraintTop_toTopOf="@+id/textView_lgborder"
            app:layout_constraintVertical_bias="0.405"
            tools:targetApi="o" />

        <TextView
            android:id="@+id/SignInPasswordTitle"
            android:layout_width="163dp"
            android:layout_height="31dp"
            android:text=" Password :"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintBottom_toBottomOf="@+id/textView_lgborder"
            app:layout_constraintEnd_toEndOf="@+id/textView_lgborder"
            app:layout_constraintHorizontal_bias="0.102"
            app:layout_constraintStart_toStartOf="@+id/textView_lgborder"
            app:layout_constraintTop_toTopOf="@+id/textView_lgborder"
            app:layout_constraintVertical_bias="0.299" />

        <EditText
            android:id="@+id/signInEmailTextInput"
            android:layout_width="262dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView_lgborder"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="@+id/textView_lgborder"
            app:layout_constraintTop_toTopOf="@+id/textView_lgborder"
            app:layout_constraintVertical_bias="0.129"
            tools:targetApi="o" />

        <Button
            android:id="@+id/signInButton"
            android:layout_width="263dp"
            android:layout_height="48dp"
            android:text="Sign In"
            app:backgroundTint="#6cbfb0"
            app:layout_constraintBottom_toBottomOf="@+id/textView_lgborder"
            app:layout_constraintEnd_toEndOf="@+id/textView_lgborder"
            app:layout_constraintHorizontal_bias="0.647"
            app:layout_constraintStart_toStartOf="@+id/textView_lgborder"
            app:layout_constraintTop_toTopOf="@+id/textView_lgborder"
            app:layout_constraintVertical_bias="0.576" />

        <Button
            android:id="@+id/forgotPasswordButton"
            android:layout_width="259dp"
            android:layout_height="48dp"
            android:text="Forgot Password"
            app:backgroundTint="#6cbfb0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView_lgborder"
            app:layout_constraintHorizontal_bias="0.523"
            app:layout_constraintStart_toStartOf="@+id/textView_lgborder"
            app:layout_constraintTop_toTopOf="@+id/textView_lgborder"
            app:layout_constraintVertical_bias="0.717" />

        <TextView
            android:id="@+id/signInErrorView"
            android:layout_width="257dp"
            android:layout_height="75dp"
            android:text="  - - - Error View - - -"
            app:layout_constraintBottom_toBottomOf="@+id/textView_lgborder"
            app:layout_constraintEnd_toEndOf="@+id/textView_lgborder"
            app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintStart_toStartOf="@+id/textView_lgborder"
            app:layout_constraintTop_toTopOf="@+id/textView_lgborder"
            app:layout_constraintVertical_bias="0.948" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>