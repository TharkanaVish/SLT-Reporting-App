<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginGmail">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="359dp"
            android:layout_height="101dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="27dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/edd" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textview_Login"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:gravity="center"
        android:text="Login"
        android:textSize="34sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/textView_lgborder"
                    android:layout_width="280dp"
                    android:layout_height="388dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/border" />

                <TextView
                    android:id="@+id/signInEmailTitle"
                    android:layout_width="236dp"
                    android:layout_height="28dp"
                    android:layout_alignStart="@+id/textView_lgborder"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:text=" Email :" />

                <EditText
                    android:id="@+id/signInEmailTextInput"
                    android:layout_width="262dp"
                    android:layout_height="48dp"
                    android:layout_below="@+id/signInEmailTitle"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="Enter Email"
                    android:inputType="textEmailAddress"
                    tools:targetApi="o" />


                <EditText
                    android:id="@+id/signInPasswordTextInput"
                    android:layout_width="262dp"
                    android:layout_height="48dp"
                    android:layout_below="@+id/SignInPasswordTitle"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="Enter Password"
                    android:inputType="textEmailAddress"
                    tools:targetApi="o" />

                <TextView
                    android:id="@+id/SignInPasswordTitle"
                    android:layout_width="163dp"
                    android:layout_height="31dp"
                    android:layout_below="@+id/signInEmailTextInput"
                    android:layout_alignStart="@+id/textView_lgborder"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:text=" Password :"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <Button
                    android:id="@+id/signInButton"
                    android:layout_width="263dp"
                    android:layout_height="48dp"
                    android:layout_below="@+id/signInPasswordTextInput"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Sign In" />

                <Button
                    android:id="@+id/forgotPasswordButton"
                    android:layout_width="259dp"
                    android:layout_height="48dp"
                    android:layout_below="@+id/signInButton"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Forgot Password" />

                <TextView
                    android:id="@+id/signInErrorView"
                    android:layout_width="257dp"
                    android:layout_height="75dp"
                    android:layout_below="@+id/forgotPasswordButton"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="  - - - Error View - - -" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>