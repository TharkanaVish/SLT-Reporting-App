<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SupervisorMain">

    <ImageView
        android:id="@+id/imgv_emp_main"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/tv_emp_main"
        android:layout_width="338dp"
        android:layout_height="480dp"
        android:layout_below="@id/imgv_emp_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/border" />

    <Button
        android:id="@+id/btn_report_emain"
        android:layout_width="296dp"
        android:layout_height="56dp"
        android:layout_alignStart="@+id/tv_emp_main"
        android:layout_alignLeft="@+id/tv_emp_main"
        android:layout_alignEnd="@+id/tv_emp_main"
        android:layout_alignRight="@+id/tv_emp_main"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/textborder"
        android:text="Report Breakdown"
        app:backgroundTint="#6cbfb0" />

    <Button
        android:id="@+id/btn_viewreport_emain"
        android:layout_width="296dp"
        android:layout_height="56dp"
        android:layout_alignStart="@+id/tv_emp_main"
        android:layout_alignLeft="@+id/tv_emp_main"
        android:layout_alignEnd="@+id/tv_emp_main"
        android:layout_alignRight="@+id/tv_emp_main"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/textborder"
        android:text="View Added Reports"
        app:backgroundTint="#6cbfb0" />

    <Button
        android:id="@+id/btn_message_emain"
        android:layout_width="296dp"
        android:layout_height="56dp"
        android:layout_alignStart="@+id/tv_emp_main"
        android:layout_alignLeft="@+id/tv_emp_main"
        android:layout_alignEnd="@+id/tv_emp_main"
        android:layout_alignRight="@+id/tv_emp_main"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/textborder"
        android:text="Supervisor Messages"
        app:backgroundTint="#6cbfb0" />

    <Button
        android:id="@+id/btn_profile_emain"
        android:layout_width="296dp"
        android:layout_height="56dp"
        android:layout_alignStart="@+id/tv_emp_main"
        android:layout_alignLeft="@+id/tv_emp_main"
        android:layout_alignEnd="@+id/tv_emp_main"
        android:layout_alignRight="@+id/tv_emp_main"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="430dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/textborder"
        android:text="View Employee Profile"
        app:backgroundTint="#6cbfb0" />

    <Button
        android:id="@+id/btn_assigntask_emain"
        android:layout_width="296dp"
        android:layout_height="56dp"
        android:layout_alignStart="@+id/tv_emp_main"
        android:layout_alignLeft="@+id/tv_emp_main"
        android:layout_alignEnd="@+id/tv_emp_main"
        android:layout_alignRight="@+id/tv_emp_main"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="510dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/textborder"
        android:text="Assign Task"
        app:backgroundTint="#6cbfb0" />

</RelativeLayout>